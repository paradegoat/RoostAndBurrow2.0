<div class="col-sm-4 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <div class='text-center pro-pic-sample'>
      <%= image_tag "pro-pic-sample.JPG", width: "100%",  alt: "profile image" %>
    </div>
    <p class="text-center">Etiam porta sem malesuada magna mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
  </div>

  <%= source_helper("alert alert-warning") %>
  <div class="sidebar-module sidebar-module-inset">
    <h4 class="text-center sidebar-module-header">Social Media</h4>
    <div class="d-flex justify-content-around social-links">
      <!-- <div class="p-2"><a href="#"><%= fa_icon "github" %></a></div> -->
      <div class=""><a href="#"><%= fa_icon "instagram" %></a></div>
      <div class=""><a href="#"><%= fa_icon "facebook" %></a></div>
      <div class=""><a href="#"><%= fa_icon "twitter" %></a></div>
    </div>
  </div>

  <div class="sidebar-module sidebar-module-inset">
    <h4 class="text-center sidebar-module-header">Topics</h4>
    <% @side_bar_topics.each do |topic| %>
      <button class="btn topic-links text-center"><%= link_to topic.title, topic_path(topic) %></button>
    <% end %>
  </div>

  <div class="sidebar-module sidebar-module-inset instagram">
    <h3 class="sidebar-module-header text-center"><%= link_to "instagram","https://www.instagram.com/roostandburrow/", target: "_blank", rel: "nofollow" %> </h3>
    <div class="container">
      <div id="instafeed" class="row d-flex justify-content-center"></div>
    </div>
  </div>
</div>
