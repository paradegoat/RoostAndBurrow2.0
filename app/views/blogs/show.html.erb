
<div class="container portfolio-container">
  <h2>
    <%= @blog.title %>
  </h2>
  <p>
    <strong>Subtitle:</strong>
    <%= @blog.subtitle %>
  </p>
  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>

  <h2>pics and words:</h2>

  <% @blog.blog_contents.each do |t| %>
  <%= image_tag t.main_image %>
  <p><%= t.body %></p>

  <% end %>
  <% unless current_user.is_a? GuestUser %>
    <%= form_for @comment, url: '#' do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', placeholder: "i got something to say..." %>
      </div>

      <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <%= render @blog.comments %>

  |
  <%= link_to 'Back', blogs_path %>
</div>
