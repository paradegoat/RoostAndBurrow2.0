<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: "Blog Title" %>
  </div>

  <div class="form-group">
    <%= form.text_field :subtitle, class: 'form-control', placeholder: "Blog Subtitle" %>
  </div>

  <div class="form-group">
    <%= form.label :cover_image %>
    <%= form.file_field :cover_image, class: 'form-control', placeholder: " BLog Cover Image" %>
  </div>

  <div class="form-group">
   <%= form.label :topic_id %>
   <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                             {
                               include_blank: true
                             },
                             class: 'form-control'
                           )
   %>
 </div>

 <div class="form-group">
    <%= form.radio_button :status, 'draft' %>
    <%= form.label :status, 'Draft' %>

    <%= form.radio_button :status, 'published' %>
    <%= form.label :status, 'Published' %>
  </div>


  <div>
    <%= form.fields_for :blog_contents do |blog_content_form| %>
      <%= render 'blog_content_fields', form: blog_content_form %>
    <% end %>

    <div>
     <%= link_to_add_association 'Add Blog Field', form, :blog_contents %>
    </div>
  </div>
<hr />

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
