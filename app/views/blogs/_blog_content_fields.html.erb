<div class="form-group nested-fields">
  <div class= "blog-content">
    <div class="form-group">
      <%= f.label :main_image %>
      <%= f.file_field :main_image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :thumb_image %>
      <%= f.file_field :thumb_image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: "Content" %>
    </div>

    <%= link_to_remove_association 'Remove Blog Field', f %>
  </div>
</div>
